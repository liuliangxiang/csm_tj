<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <FrameLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/framelayout">
 
   <LinearLayout     
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@drawable/status_bar_background" 
        android:orientation="horizontal">
    
        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:paddingLeft="158dp"
	        android:typeface="monospace" 
	        android:text="@string/bianhao" 
	        android:id="@+id/textview1"
	        android:textColor="#ffffffff"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />  
        <TextView 
			android:orientation="horizontal" 
	        android:layout_width="100dp" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical|left"
	        android:typeface="monospace" 
	        android:id="@+id/bianhao"
	         android:textColor="#ffffff99"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />  
        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="monospace" 
	        android:text="@string/xingming" 
	         android:textColor="#ffffffff"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />  
        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="120dp" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical|left"
	        android:typeface="monospace" 
	        android:id="@+id/name"
	         android:textColor="#ffffff99"
	        android:layout_weight="1"
	        android:textSize="20dp"
        /> 
        
        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="monospace" 
	        android:text="@string/xingbietitle" 
	         android:textColor="#ffffffff"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />  
        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical|left"
	        android:typeface="monospace" 
	        android:id="@+id/sex"
	         android:textColor="#ffffff99"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />

        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="monospace" 
	        android:text="@string/zhuangtai" 
	        android:textColor="#ffffffff"
	        android:layout_weight="0.2"
	        android:textSize="20dp"
        />  
  
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"   
            android:layout_gravity="center"   
            android:id="@+id/warnchannelImage"
            android:src="@drawable/greenstar"
            android:layout_weight="0.6"
            /> 
        
         <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="130dp" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:text="@string/normalchannel" 
	        android:id="@+id/warnchannel"
	        android:textColor="#ff00ff00"        
	        android:textSize="16dp"
	        android:visibility="gone"
        />
        
       <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="monospace" 
	        android:text="@string/baojing" 
	         android:textColor="#ffffffff"
	        android:layout_weight="0.2"
	        android:textSize="20dp"

        />  
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/baojing"
            android:src="@drawable/redstar"
            android:layout_weight="0.6"
            /> 
       <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="140dp" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="monospace" 
	        android:text="@string/normalcsi" 
	        android:id="@+id/warncsi"
	         android:textColor="#ffff0000"
	        android:textSize="16dp"
	        android:visibility="gone"
            /> 
         
          <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="monospace"
			android:id="@+id/timeyear"
	        android:textColor="#ffffffff"
	        android:layout_centerVertical="true"
	        android:text="yyyy-mm-dd"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />
          
        <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="sans" 
			android:id="@+id/timehour"
	        android:textColor="#ffffffff"
	        android:layout_centerVertical="true"
	        android:text="HH:MM"
	        android:layout_weight="1"
	        android:textSize="20dp"
        />
        
         <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="sans" 
	        android:textColor="#ffffffff"
	        android:layout_centerVertical="true"
	        android:text="@string/dianliang" 
	        android:layout_weight="1"
	        android:textSize="20dp"
        />
         
         <TextView 
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"
	        android:typeface="sans" 
			android:id="@+id/baterry"
	        android:textColor="#ffffffff"
	        android:layout_centerVertical="true"
	        android:text="0%" 
	        android:layout_weight="1"
	        android:textSize="20dp"
        />
         
	  </LinearLayout>
	<!-- android:layout_marginTop="40px" -->

   <com.example.csm.boxingview.boxingview  
       android:layout_marginTop="40px"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxing"
           />
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingLeft="10dip"
        android:paddingBottom="10dip"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
	        <Button 
	            android:layout_width="100dip"
	            android:layout_height="50dip"
	            android:layout_gravity="center"
	            android:id="@+id/btncsi"
	            android:background="@drawable/csi"
	            android:text="@string/csi"
	            android:textColor="#ffffffff"
	            android:textSize="20dip"
	            />
	       <TextView
	           	android:layout_width="wrap_content"
	           	android:layout_height="0px"
	           	android:layout_gravity="center"
	           	android:text="@string/csi"
	           	android:visibility="gone"
	           />   
       </LinearLayout>
       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
	        <Button 
	            android:layout_width="100dip"
	            android:layout_height="50dip"
	            android:layout_gravity="center"
	            android:id="@+id/btneeg"
	            android:text="@string/eeg"
	            android:textSize="20dip"
	            android:textColor="#ffffffff"
	            android:background="@drawable/bs"
	            />
	       <TextView
	           	android:layout_width="wrap_content"
	           	android:layout_height="0px"
	           	android:layout_gravity="center"
	           	android:text="@string/eeg"
	           	android:visibility="gone"
	           />
       </LinearLayout>
       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
	        <Button 
	            android:layout_width="100dip"
	            android:layout_height="50dip"
	            android:layout_gravity="center"
	            android:id="@+id/btndongjie"
	            android:text="@string/jilu"
	            android:textColor="#ffffffff"
	            android:background="@drawable/jilu"
	            android:textSize="20dip"
	            />
	       <TextView
	           	android:layout_width="wrap_content"
	           	android:layout_height="0px"
	           	android:layout_gravity="center"
	           	android:id="@+id/dongjieText"
	           	android:text="@string/jilu"
	           	android:visibility="gone"
	           />       
       </LinearLayout>
       
        
       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
	        <Button 
	            android:layout_width="100dip"
	            android:layout_height="50dip"
	            android:layout_gravity="center"
	            android:id="@+id/btnshezi"
	            android:text="@string/shezi"
	            android:textColor="#ffffffff"
	            android:background="@drawable/shezhi"
	            android:textSize="20dip"
	            />
	       <TextView
	           	android:layout_width="wrap_content"
	           	android:layout_height="0px"
	           	android:layout_gravity="center"
	           	android:text="@string/shezi"
	           	android:visibility="gone"
	           />
       </LinearLayout>
       
        <LinearLayout
            android:layout_width="match_parent"
             android:layout_weight="1"
              android:orientation="vertical"
            android:layout_height="wrap_content">
	        <Button 
	            android:layout_width="100dip"
	            android:layout_height="50dip"
	            android:layout_gravity="center"
	            android:id="@+id/btnbinhao"
	            android:text="@string/binhao"
	            android:textColor="#ffffffff"
	            android:background="@drawable/data"
	            android:textSize="20dip"
	            />
	       <TextView
	           	android:layout_width="wrap_content"
	           	android:layout_height="0px"
	           	android:layout_gravity="center"
	           	android:text="@string/binhao"
	           	android:visibility="gone"
	           />  
	       <TextView
		      android:layout_width="wrap_content"
		      android:layout_height="0px"
		      android:layout_gravity="left"
		      android:id="@+id/timescale1"
		      android:textSize="20dp"
		      android:textColor="#cccc9977"
		      />
       </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
             android:layout_weight="1"
             android:orientation="vertical"
             android:visibility="gone"
            android:layout_height="wrap_content">
        <Button 
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:id="@+id/btnpause"
            android:visibility="gone"
            android:background="@drawable/button"
            />
       <TextView
           	android:layout_width="wrap_content"
           	android:id="@+id/textpause"
           	android:layout_height="0px"
           	android:layout_gravity="center"
           	android:text="@string/pause"
           	android:visibility="gone"
           />
       
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <Button 
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:id="@+id/btnsave"
            android:text="@string/stop"
            
            android:background="@drawable/button"
            android:textSize="20dip"
            />
       <TextView
           	android:layout_width="wrap_content"
           	android:layout_height="0px"
           	android:layout_gravity="center"
           	android:id="@+id/textstart"
           	
           	android:visibility="gone"
           />     
       </LinearLayout>
       
       <LinearLayout
            android:layout_width="match_parent"
             android:layout_weight="1"
             android:orientation="vertical"
            android:layout_height="wrap_content">
        <Button 
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:id="@+id/btnwarning"
            android:text="@string/warnon"
            android:textColor="#ffffffff"
            android:background="@drawable/baojing"
            android:textSize="20dip"
            
            />
       <TextView
           	android:layout_width="wrap_content"
           	android:layout_height="0px"
           	android:id="@+id/warntext"
           	android:layout_gravity="center"
           	android:text="@string/warnon"
           	android:visibility="gone"
           />  
       <TextView
	      android:layout_width="wrap_content"
	     android:layout_height="0px"
	      android:layout_gravity="center"
	      android:text="00:00:00"
	      android:id="@+id/timescale"
	      android:textSize="20dp"
	      android:textColor="#ffffff99"
	      android:visibility="gone"
	      />  
       </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_height="wrap_content">
       <TextView
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_gravity="center"
	      android:text="00:00:00"
	      android:id="@+id/timescale2"
	      android:textSize="28dp"
	      android:textColor="#cccc9977"
	      /> 
       </LinearLayout>

  </LinearLayout>
 <!-- 
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center"
      android:layout_marginBottom="10dip"
      android:layout_marginLeft="160dip"
      android:text="00:00:00"
      android:id="@+id/timescale"
      android:textSize="20dp"
      android:textColor="#cccc9977"
      >    
  </TextView>
   -->
  <include layout="@layout/mytabview"/>
  <include layout="@layout/max_csi"/>
  </FrameLayout>
  <include layout="@layout/activity_main"/>
</LinearLayout>
